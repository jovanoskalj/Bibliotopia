@using Bibliotopia.Data.ViewModels;
@model RegisterVM;

@{
    ViewData["Title"] = "Регистрирај се";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h4 class="text-center">Регистрација</h4>
        <p class="text-center">Креирај сметка за да уживаш во бенефитите на нашиот сајт</p>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger text-center">
                <span><b>Извинете!</b> - @TempData["Error"]</span>
            </div>
        }

        <div class="card">
            <div class="card-body">
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" placeholder="пр.Јана Симоноска" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EmailAddress" class="control-label"></label>
                        <input asp-for="EmailAddress" class="form-control" placeholder="пр.jana@gmail.com" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" placeholder="Внеси лозинка" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="control-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Повторно внеси лозинка" type="password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center" style="margin-top:40px;">
                        <input class="btn btn-outline-success" type="submit" value="Регистрирај се" />
                        <a class="btn btn-outline-secondary" asp-controller="Books" asp-action="Index">Откажи</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
