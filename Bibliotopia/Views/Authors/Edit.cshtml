@model Author
@{
    ViewData["Title"] = "Уреди| Автор";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="text-center">Уреди</h1>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group text-center">
                    <img id="ProfilePicturePreview" class="img-thumbnail" style="max-width: 200px; max-height: 200px;" />
                </div>
                <div class="form-group">
                    <label asp-for="PictureURL" class="control-label">Линк од фотографија</label>
                    <input asp-for="PictureURL" class="form-control" />
                    <span asp-validation-for="PictureURL" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FullName" class="control-label">Име и презиме</label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Bio" class="control-label">Биографија</label>
                    <textarea asp-for="Bio" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>

                <div class="form-group text-center" style="margin-top:50px">
                    <button type="submit" class="btn btn-outline-success">Зачувај</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Назад</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Display initial profile picture preview
            var initialPictureUrl = $("#PictureURL").val();
            $("#ProfilePicturePreview").attr("src", initialPictureUrl);
        });

        // Update profile picture preview on change
        $("#PictureURL").on("change", function () {
            var pictureUrl = $(this).val();
            $("#ProfilePicturePreview").attr("src", pictureUrl);
        });
    </script>
}